datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String       @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String       @unique
  password  String
  createdAt DateTime     @default(now())
  notesSent Note[]       @relation("NotesSent")
  taggedIn  TaggedUser[] @relation("UserTags")
}

model Candidate {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  email String @unique
  notes Note[]
}

model Note {
  id             String       @id @default(auto()) @map("_id") @db.ObjectId
  message        String
  createdAt      DateTime     @default(now())
  senderId       String       @db.ObjectId
  sender         User         @relation("NotesSent", fields: [senderId], references: [id])
  candidateId    String       @db.ObjectId
  candidate      Candidate    @relation(fields: [candidateId], references: [id])
  tags           String[]
  taggedUserRefs TaggedUser[]
}

model TaggedUser {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  note   Note   @relation(fields: [noteId], references: [id])
  noteId String @db.ObjectId
  user   User   @relation("UserTags", fields: [userId], references: [id])
  userId String @db.ObjectId
}
